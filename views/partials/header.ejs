<%# /views/partials/header.ejs %>
<header>
    <nav>
        <div class="wrapper">
            <div class="logo"><a href="/">Cargo.</a></div>
            
            <%# --- Primary Navigation Links (Used for BOTH Desktop and Mobile) --- %>
            <div class="general-container">
                <div class="nav-container">
                    
                    <%# The UL for Primary Navigation (ID for mobile toggle) %>
                    <ul class="nav-links" id="mobile-menu">
                        
                        <%# --- Products Mega Menu --- %>
                        <li class="nav-item has-mega-menu">
                            <a href="#" class="desktop-item">Products</a>
                            <div class="mega-box">
                                <div class="content">
                                    <div class="row">
                                    <header>Consumer Goods</header>
                                    <ul class="mega-links">
                                        <li><a href="/clothings">Clothes</a></li>
                                        <li><a href="#">Electronics</a></li>
                                        <li><a href="#">Furnitures</a></li>
                                    </ul>
                                    </div>
                                    <div class="row">
                                    <header>Industrial and Raw materials</header>
                                    <ul class="mega-links">
                                        <li><a href="#">Industrial materials</a></li>
                                        <li><a href="#">Raw Materials</a></li>
                                    </ul>
                                    </div>
                                    <div class="row">
                                    <header>Perishable Cargo</header>
                                    <ul class="mega-links">
                                        <li><a href="#">Food and Beverages</a></li>
                                        <li><a href="#">Medications</a></li>
                                        <li><a href="#">Agricultural Products</a></li>
                                        <li><a href="#">Fragile Items</a></li>
                                    </ul>
                                    </div>
                                </div>
                            </div>
                        </li>

                        <li><a href="/customer/booking/new">Book Cargo</a></li> 
                        <li><a href="/shipment-guides">Shipment guides</a></li>
                        
                        <%# --- About Us Dropdown --- %>
                        <li class="nav-item has-dropdown">
                            <a href="#" class="desktop-item">About Us</a>
                            <ul class="drop-menu">
                                <li><a href="/about">About us</a></li>   
                                <li><a href="/contact">Contact us</a></li> 
                            </ul>
                        </li>
                        
                        <li><a href="/track">Track & Trace</a></li>
                        
                        <%# --- USER-SPECIFIC MOBILE-ONLY ACTIONS (moved inside UL for mobile menu) --- %>
                        <% if (user) { %> 
                            <li class="user-action-item mobile-only"><a href="/customer/profile" class="mobile-profile-link">Profile</a></li>
                            <li class="user-action-item mobile-only"><a href="/auth/logout" class="register-button logout-button">Logout</a></li> 
                        <% } else { %>
                            <li class="user-action-item mobile-only"><a href="/auth/login">Login</a></li> 
                            <li class="user-action-item mobile-only"><a href="/auth/register" class="register-button">Register</a></li>
                        <% } %>
                    </ul>
                    
                    <%# --- User-Specific DESKTOP/TABLET Actions (SEPARATE CONTAINER) --- %>
                    <div class="user-button desktop-actions">
                        <% if (user) { %> 
                            <a href="/auth/logout" class="register-button logout-button">Logout</a>
                        <% } else { %>
                            <a href="/auth/login" class="login-link">Login</a> 
                            <a href="/auth/register" class="register-button">Register</a>
                        <% } %>
                    </div>

                </div>
            </div>

            <%# --- User Icon for Profile Dropdown (Desktop/Tablet) --- %>
            <div class="user" id="userDiv">
                <% if (user) { %>
                    <ion-icon name="person-circle-outline"></ion-icon>
                <% } else { %>
                    <ion-icon name="people-outline"></ion-icon>
                <% } %>
            </div>
            
            <%# --- Mobile Menu Toggle Button (Targeted by JavaScript) --- %>
            <div class="toggle" id="menu-toggle" data-target="mobile-menu">
                <ion-icon name="menu-outline"></ion-icon>
            </div>
        </div>
    </nav>
</header>